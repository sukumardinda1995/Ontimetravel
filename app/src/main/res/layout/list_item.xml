<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal"
    android:padding="16dp">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvbusname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="200dp"
            android:layout_height="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9A9A9A"
                android:textSize="10.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvseattype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9A9A9A"
                android:textSize="10.5sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9A9A9A"
                android:textSize="10.5sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/busicon" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvdtime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tduration"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textColor="#9A9A9A"
                        android:textSize="10.5sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/tvtime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tvtprice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingLeft="5dp"
                        android:paddingTop="3dp"
                        android:textColor="#000"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:orientation="horizontal">

                    <View
                        style="@style/Divider"

                        android:layout_marginStart="60dp"
                        android:layout_marginTop="3.5dp" />


                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvaddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#9A9A9A"
                        android:textSize="10.5sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvtseat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingTop="5dp"
                        android:textColor="#9A9A9A"
                        android:textSize="10.5sp"
                        android:textStyle="bold|normal" />

                    <TextView
                        android:id="@+id/tvgender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:textColor="#9A9A9A"
                        android:textSize="10.5sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/bookingnumber"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.012"
                        android:autoLink="phone"
                        android:background="@drawable/calllicon"
                        android:gravity="center"
                        android:paddingLeft="1dp"
                        android:paddingTop="10dp"
                        android:textSize="0sp" />


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvjdays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.030"
                android:textColor="#9A9A9A"
                android:textSize="10.5sp"
                android:textStyle="bold|normal"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/tvjdays1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.010"
                android:text="Call For Booking"
                android:textColor="#34ad00"
                android:textSize="10.5sp"
                android:textStyle="bold|normal"
                tools:ignore="SmallSp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>